<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_task_form2_inherit_auguria" model="ir.ui.view">
        <field name="name">project.task.form</field>
        <field name="model">project.task</field>
        <field name="priority">10</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//group/group/field[@name='date_deadline']" position="before">
                <field name="milestone_id" domain="[('project_id', '=', display_project_id)]"/>
                <field name="first_category"/>
                <field name="second_category" domain="[('category_2', '=', first_category)]"/>
                <field name="budget"/>
            </xpath>
        </field>
    </record>
    <!-- category 1-->
    <record id="view_project_task_category1_form" model="ir.ui.view">
        <field name="name">project.task.category</field>
        <field name="model">project.task.category1</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <tree string="D">
                <field name="name"/>
                <field name="description"/>
                <field name="category_2"/>
            </tree>
        </field>
    </record>


    <record id="action_view_project_task_category1" model="ir.actions.act_window">
        <field name="name">Category 1</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">project.task.category1</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Cliquez ici pour créer une nouvelle ligne</p>
        </field>
    </record>
    <!-- category 2-->
    <record id="view_project_task_category2_tree" model="ir.ui.view">
        <field name="name">project.task.category2.tree</field>
        <field name="model">project.task.category2</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <tree string="D">
                <field name="name"/>
                <field name="description"/>
                <field name="category_2"/>
                <field name="kanban_color" widget="color"/>
            </tree>

        </field>
    </record>

    <record id="view_project_task_category2_form" model="ir.ui.view">
        <field name="name">project.task.category2.form</field>
        <field name="model">project.task.category2</field>
        <field name="arch" type="xml">
            <form string="Category2">
                <sheet>
                    <group>
                <field name="name"/>
                <field name="description"/>
                <field name="category_2"/>
                <field name="kanban_color" widget="color"/>
                <field name="category_3"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>





    <record id="action_view_project_task_category2" model="ir.actions.act_window">
        <field name="name">Category 2</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">project.task.category2</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Cliquez ici pour créer une nouvelle ligne</p>
        </field>
    </record>

    <!-- category 3-->
    <record id="view_project_task_category3_form" model="ir.ui.view">
        <field name="name">project.task.category3</field>
        <field name="model">project.task.category3</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <tree string="D">
                <field name="name"/>
                <field name="description"/>
                <field name="category_3"/>
            </tree>
        </field>
    </record>


    <record id="action_view_project_task_category3" model="ir.actions.act_window">
        <field name="name">Category 3</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">project.task.category3</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Cliquez ici pour créer une nouvelle ligne</p>
        </field>
    </record>

    <!--menu creation category1-->
    <menuitem id="task_category_1" name="Category 1" parent="project.menu_project_config"
              action="action_view_project_task_category1"/>
    <!--menu creation category2-->
    <menuitem id="task_category_2" name="Category 2" parent="project.menu_project_config"
              action="action_view_project_task_category2"/>
    <!--menu creation category3-->
    <menuitem id="task_category_3" name="Category 3" parent="project.menu_project_config"
              action="action_view_project_task_category3"/>
</odoo>
