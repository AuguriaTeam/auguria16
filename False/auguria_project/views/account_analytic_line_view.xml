<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_timesheet_line_tree_inherit_auguria" model="ir.ui.view">
        <field name="name">account.analytic.line.tree.hr_timesheet.inherit</field>
        <field name="model">account.analytic.line</field>
        <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_tree"/>
        <field name="arch" type="xml">
            <field name="employee_id" position="after">
                <field name="work_type" optional="show"/>
                <field name="first_category" optional="show"/>
                <field name="second_category" domain="[('category_2', '=', first_category)]" optional="show"/>
                <field name="third_category" domain="[('category_3', '=', second_category)]" optional="show"/>
                <field name="milestone_id" optional="show"/>
            </field>
        </field>
    </record>

    <record id="view_task_form2_inherited_tree_timesheet_inherit" model="ir.ui.view">
        <field name="name">project.task.form.inherited.tree.timesheet.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="hr_timesheet.view_task_form2_inherited"/>
        <field name="arch" type="xml">
            <tree editable="bottom" position="inside">
                <field name="work_type" optional="show"/>
                <field name="first_category" optional="show"/>
                <field name="second_category" domain="[('category_2', '=', first_category)]" optional="show"/>
                <field name="third_category" domain="[('category_3', '=', second_category)]" optional="show"/>
            </tree>
            <xpath expr="//tree/field[@name='unit_amount']" position="before">
                <field name="previous" optional="show"/>
                <field name="previous_hours" widget="timesheet_uom" optional="show"/>

            </xpath>

        </field>
    </record>

    <!-- work type-->
    <record id="view_account_analytic_line_type_form" model="ir.ui.view">
        <field name="name">account.analytic.line.type</field>
        <field name="model">account.analytic.line.type</field>
        <field name="arch" type="xml">
            <tree string="D">
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>


    <record id="action_view_account_analytic_line_type" model="ir.actions.act_window">
        <field name="name">Work Type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.analytic.line.type</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Cliquez ici pour cr√©er une nouvelle ligne</p>
        </field>
    </record>


    <!--menu creation category1-->
    <menuitem id="account_analytic_line_type" name="Work type" parent="hr_timesheet.timesheet_menu_root"
              action="action_view_account_analytic_line_type"/>

</odoo>
