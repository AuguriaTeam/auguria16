<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.mail.brand</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="40" />
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Email Debranding" string="Couleur théme courrier" data-key="auguria_mail_config" groups="base.group_erp_manager">
                    <h2>Changement couleurs modèles de courrier</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane" />
                            <div class="o_setting_right_pane">
                                <div class="col-12 mt-3">
                                    <label string="Couleur de texte" for="mail_theme_color_text" />
                                </div>
                                <div class="col-12 mt-3">
                                    <field name="mail_theme_color_text" widget="color"/>
                                </div>
                            </div>
                            <div class="o_setting_right_pane">
                                <div class="col-12 mt-3">
                                    <label string="Couleur background button" for="mail_theme_color_button" />
                                </div>
                                <div class="col-12 mt-3">
                                    <field name="mail_theme_color_button" widget="color"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
    <record id="action_account_config" model="ir.actions.act_window">
        <field name="name">Couleur du thème du courrier</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'email_branding_knk', 'bin_size': False}</field>
    </record>
</odoo>
